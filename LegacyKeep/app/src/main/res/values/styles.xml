<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============ Profile fragment ============ -->
    <style name="ProfileRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">#FFF7D6</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProfileIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:tint">#5C3B1E</item>
    </style>

    <style name="ProfileLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#5C3B1E</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5C3B1E</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
